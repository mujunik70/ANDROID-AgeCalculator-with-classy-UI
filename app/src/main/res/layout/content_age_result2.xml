<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_age_result2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgthree"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.stickysoft.agecalculator.AgeResult2"
    tools:showIn="@layout/activity_age_result2">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_calc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/myAge_ans"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:text="Years Old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView5"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/myAge_ans"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="CALCULATION RESULTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:text="You were born in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/person_calc_address"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_calc_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/result_yob"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:text="You are"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/person_calc"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="AND NOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/result_yob"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
