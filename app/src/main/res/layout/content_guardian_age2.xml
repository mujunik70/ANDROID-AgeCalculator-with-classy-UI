<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_guardian_age2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgthree"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.stickysoft.agecalculator.GuardianAge2"
    tools:showIn="@layout/activity_guardian_age2">

    <TextView
        android:text="CALCULATE PARENT'S AGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/yob"
        android:hint="Enter your year of birth"
        android:textAlignment="center"/>

    <Button
        android:text=" Calculate Parent's Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/calc_guardianAge"
        android:layout_below="@+id/g_age"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick_myAgeCalc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/g_age"
        android:hint="Parent age at time of birth"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_below="@+id/yob"
        android:layout_alignLeft="@+id/yob"
        android:layout_alignStart="@+id/yob" />

</RelativeLayout>
